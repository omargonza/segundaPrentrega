<div id="product-list">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-light">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">DESCRIPCION</th>
            <th scope="col">CATEGORIA</th>
            <th scope="col">PRECIO</th>
            <th scope="col">CODIGO</th>
            <th scope="col">STOCK</th>
            <th scope="col">FOTO</th>
            <th scope="col">ACCION</th>
          </tr>
        </thead>
        <tbody id="tableP">
          {{#each products}}
          <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.category}}</td>
            <td>{{this.price}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>
              <img
              src="{{this.thumbnail}}"
              style="width: 50px; min-height:100%; max-height: 50px;"/>
            </td>
            <td>
              <button class="button-delete" type="button" value="{{this.id}}">Borrar</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <h2 class="text-center my-4">CREAR PRODUCTO</h2>
      <form id="form-products" style="margin: auto">
        <div style="margin-bottom: 16px">

          <div class="col-md-auto mx-3">
            <label for="title"> Titulo: </label>
            <br />
            <input
              type="text"
              name="title"
              id="form-title"
              style="margin-bottom: 16px"
              class="form-control"
            />
          </div>

          <div class="col-md-auto mx-3">
            <label for="description"> Descripci√≥n: </label>
            <br />
            <input
              type="text"
              name="description"
              id="form-description"
              style="margin-bottom: 16px"
              class="form-control"
            />
          </div>

          <div class="col-md-auto mx-3">
            <label for="price"> Precio: </label>
            <br />
            <input
              type="number"
              name="price"
              id="form-price"
              style="margin-bottom: 16px"
              step="1"
              class="form-control"
            />
          </div>

          <div class="col-md-auto mx-3">
            <label for="code"> Codigo: </label>
            <br />
            <input
              type="text"
              name="code"
              id="form-code"
              style="margin-bottom: 16px"
              class="form-control"
            />
          </div>

          <div class="col-md-auto mx-3">
            <label for="stock"> Stock: </label>
            <br />
            <input
              type="number"
              name="stock"
              id="form-stock"
              style="margin-bottom: 16px"
              step="1"
              class="form-control"
            />
          </div>

          <div class="col-md-auto mx-3">
            <label for="category"> Categoria: </label>
            <br />
            <input
              type="text"
              name="category"
              id="form-category"
              style="margin-bottom: 16px"
              class="form-control"
            />
          </div>

          <div class="col-md-auto mx-3">
            <label for="thumbnail"> URL de la Imagen: </label>
            <br />
            <input
              type="text"
              name="thumbnail"
              id="form-thumbnail"
              style="margin-bottom: 16px"
              class="form-control"
            />
          </div>
          <div
            style="display: flex; justify-content: center; align-items: center"
          >
            <input
              type="submit"
              value="Crear producto"
              class="btn btn-primary"
              id="button-send"
            />
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/products-realtime.js"></script>